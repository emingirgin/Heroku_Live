<h1><i class="fab fa-ello"></i> Contact Us<i class="fab fa-ello"></i></h1>
        <div id="messageArea"></div>
    

        <div class="row justify-content-lg-center g-3">
          <form class="col-lg-6 col-md-10 col-sm-10">

            <div class="input-group mb-3">
              <span class="input-group-text">Full Name</label>
              <input id="fullName" name="fullName" type="text" class="form-control" 
              aria-label="Full Name" aria-describedby="Full Name Input" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text">Contact Number</label>
              <input id="contactNumber" name="contactNumber" type="tel" class="form-control" 
              aria-label="Contact Number" aria-describedby="Contact Number Input" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text">Email Address</label>
              <input id="emailAddress" name="emailAddress" type="email" class="form-control" 
              aria-label="Email Address" aria-describedby="Email Address Input" required>
            </div>

            <div class="input-group mb-3">
              <span class="input-group-text">Your Message</span>
              <textarea name="message" id="message" class="form-control" aria-label="Email Address" required>
              </textarea>
            </div>
  
            <div class="mb-3 form-check">
              <input id="subscribeCheckbox" type="checkbox" class="form-check-input" name="subscribeCheckbox">
              <label class="form-check-label" for="subscribeCheckbox">Subscribe to our Contact List</label>
            </div>
  
            <button id="sendButton" type="submit" class="btn btn-primary"><i class="fas fa-envelope fa-lg"></i> Submit</button>
            <button id="cancelButton" type="reset" class="btn btn-warning"><i class="fas fa-undo fa-lg"></i> Cancel</button>  
          </form>

          <div id="contactListButton" class="col-lg-3 col-md-3">
            <a class="nav-link" href="/contact-list"> Contact List</a>
          </div>
        </div>